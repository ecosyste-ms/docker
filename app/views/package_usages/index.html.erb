<% @meta_title = "Package Usage Across Docker Images" %>
<div class="container-sm">
  <h1>Package Usage Across Docker Images</h1>

  <% @ecosystems.each do |ecosystem, count| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to ecosystem, ecosystem_package_usages_path(ecosystem) %>
        </h5>
        
        <small class='text-muted'>
          <%= pluralize number_with_delimiter(count), 'package' %> 
        </small>
      </div>
    </div>
  <% end %>
</div>