{
  "cron": [
    {
      "command": "bundle exec rake packages:sync_popular",
      "schedule": "0 * * * *"
    },
    {
      "command": "bundle exec rake packages:resync_outdated",
      "schedule": "0 * * * *"
    },
    {
      "command": "bundle exec rake packages:update_counts",
      "schedule": "0 */2 * * *"
    },
    {
      "command": "bundle exec rake distros:sync_daily",
      "schedule": "0 0 * * *"
    }
  ]
}